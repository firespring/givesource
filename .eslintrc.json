{
  "extends": ["firespring/javascript/vue", "plugin:vue/recommended"],
  "globals": {
    "jQuery": true,
    "API_URL": true

  },
  "rules": {
    "vue/multi-word-component-names": ["error", {
      "ignores": ["Modal", "Modals"]
    }],
    "vue/v-on-event-hyphenation": ["error", "always", {
      "autofix": true,
      "ignore": ["update:modelValue"]
    }],
    "vue/no-multiple-template-root": "off",
    "vue/no-v-for-template-key": "off"
  },
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "rules": {
        "vue/require-v-for-key": "off",
        "vue/valid-v-for": "off",
        "vue/component-definition-name-casing": ["error", "PascalCase"],
        "vue/component-name-in-template-casing": ["error", "PascalCase", {
          "registeredComponentsOnly": true,
          "ignores": []
        }]
      }
    },
    {
      "files": [
        "common/components/ui/SalesforceChat.vue"
      ],
      "rules": {
        "vue/valid-template-root": "off"
      }
    },
    {
      "files": [
        "common/components/layout/NoticeAlertBar.vue",
        "common/components/layout/PageMainContentSidebar.vue",
        "common/components/ui/forms/AppFormFieldRadioButton.vue",
        "common/components/ui/forms/AppFormItemLabel.vue",
        "common/components/ui/forms/AppFormSection.vue",
        "common/components/ui/websiteContents/contentText/previews/AppPreviewContentText.vue",
        "apps/account/components/accountNotices/PageAccountNoticeDetails.vue",
        "apps/websiteUsers/components/manageUsers/WebsiteUserListRow.vue",
        "apps/onlineTools/components/orderAdministration/PageOrderAdministrationEdit.vue",
        "apps/websiteUsers/components/manageUsers/PageEditWebsiteUser.vue",
        "apps/websiteUsers/components/manageUsers/PageWebsiteUsersList.vue",
        "apps/portals/components/ManageUsersListRow.vue",
        "apps/portals/components/UserDetailsModal.vue"
      ],
      "rules": {
        "vue/no-v-html": "off"
      }
    }
  ]
}
