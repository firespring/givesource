{
	"name": "givesource-lambda",
	"description": "AWS Lambda functions for Givesource app",
	"scripts": {
		"build:deploy": "npm run clean && node bin/fetch-aws-ids.js && node bin/setup-apex.js dev && npm run webpack",
		"build:release": "npm run clean && node bin/setup-apex.js release && npm run webpack",
		"clean": "rimraf build",
		"deploy": "npm run build:deploy && node bin/deploy",
		"logs": ". $(dirname $0)/../../.env && cd build && AWS_REGION=${AWS_REGION} apex logs -f",
		"release": "npm run build:release && node bin/release",
		"release:force": "npm run release -- --force",
		"seed": "node bin/seed",
		"test": "AWS_LAMBDA_FUNCTION_NAME=test NODE_ENV=test mocha test/ --recursive",
		"test:coverage": "nyc --reporter=lcov --reporter=text --include src/ --all npm run test",
		"test:dev": "npm run test -- --watch",
		"webpack": "webpack --config config/webpack.config.js --hide-modules"
	},
	"author": "Firespring",
	"license": "GPL-3.0",
	"dependencies": {
		"aws-sdk": "^2.65.0",
		"dotenv": "^4.0.0",
		"json-loader": "^0.5.7",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.1",
		"webpack": "^2.6.1"
	},
	"devDependencies": {
		"assert": "^1.4.1",
		"async": "^2.5.0",
		"aws-sdk-mock": "^1.7.0",
		"axios": "^0.16.2",
		"cfn-response": "^1.0.1",
		"change-case": "^3.0.1",
		"commander": "^2.11.0",
		"faker": "^4.1.0",
		"fuzzy": "^0.1.3",
		"inquirer": "^3.2.1",
		"inquirer-autocomplete-prompt": "^0.11.0",
		"lodash": "^4.17.4",
		"mime": "^1.3.6",
		"mocha": "^3.4.2",
		"mocha-promise-me": "^1.0.3",
		"node-uuid": "^1.4.8",
		"nyc": "^11.0.2",
		"randomstring": "^1.1.5",
		"sinon": "^2.3.6",
		"uuid-validate": "0.0.2",
		"validate.js": "^0.11.1"
	}
}
